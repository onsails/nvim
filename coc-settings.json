{
  "languageserver": {
    "terraform": {
      "command": "terraform-lsp",
      "filetypes": ["terraform"],
      "initializationOptions": {}
    },
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
      "rootPatterns": [".ccls-root", "compile_commands.json"],
      "initializationOptions": {
        "cache": {
          "directory": ".ccls-cache"
        },
        "client": {
          "snippetSupport": true
        }
      }
    }
  },
  "coc.preferences.formatOnSaveFiletypes": ["vim", "rust", "json"],
  "coc.preferences.codeLens.enable": true,
  "coc.preferences.diagnostic.virtualText": true,
  "coc.preferences.suggest.enablePreview": true,
  "rust-analyzer.updates.channel": "stable",
  "yaml.editor.tabSize": 2,
  "explorer.icon.enableNerdfont": true
}
